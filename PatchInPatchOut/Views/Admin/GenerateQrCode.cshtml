@{
    ViewData["Title"] = "Generate QR Code";
}

<div class="container text-center">
    <h3>QR Code Generated on: @ViewBag.GeneratedDateTime</h3>  <!-- ✅ Show Date & Time -->
    <hr>

    @if (ViewBag.QRCodeImage != null)
    {
        <img src="data:image/png;base64,@ViewBag.QRCodeImage"
             alt="QR Code"
             class="img-fluid"
             style="max-width: 300px; height: auto;" />
    }
    else
    {
        <p class="text-danger">QR Code could not be generated.</p>
    }
</div>
